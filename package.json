{
	"name": "jact",
	"version": "1.0.0",
	"description": "Just Another Context Tool - Citation link validator and manager for markdown files",
	"type": "module",
	"main": "dist/citation-manager.js",
	"bin": {
		"jact": "./dist/citation-manager.js"
	},
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "npm run build",
		"test": "vitest run",
		"test:watch": "vitest",
		"start": "node dist/citation-manager.js",
		"validate:ts-conversion": "node --loader ts-node/esm scripts/validate-typescript-conversion.ts",
		"citation:validate": "node ./dist/citation-manager.js validate",
		"citation:ast": "node ./dist/citation-manager.js ast",
		"citation:base-paths": "sh -c 'node ./dist/citation-manager.js extract links \"$1\" 2>/dev/null | jq -r \".outgoingLinksReport.processedLinks[] | select(.sourceLink.target.path.absolute) | .sourceLink.target.path.absolute\" | sort -u' --",
		"citation:extract": "node ./dist/citation-manager.js extract links",
		"citation:extract:content": "sh -c 'node ./dist/citation-manager.js extract links \"$1\" | jq \".extractedContentBlocks\"' --",
		"citation:extract:header": "sh -c 'node ./dist/citation-manager.js extract header \"$1\" \"$2\"' --",
		"citation:fix": "node ./dist/citation-manager.js validate --fix",
		"postinstall": "git submodule update --init --recursive"
	},
	"keywords": [
		"citation",
		"validator",
		"markdown",
		"obsidian"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"commander": "^14.0.1",
		"marked": "^17.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.3",
		"@types/node": "^24.10.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	}
}
